<%- include("partials/header"); -%>
<main id="main" class="bg-dark">
  <section id="contact" class="contact mb-5">
    <div class="container" data-aos="fade-up">
      <div class="row">
        <div class="col-lg-12 text-center mb-5">
          <h1 class="page-title text-info">Contact us</h1>
        </div>
      </div>

      <div class="row gy-4 bg-info">
        <div class="col-md-4">
          <div class="info-item">
            <i class="bi bi-geo-alt"></i>
            <h3>Address</h3>
            <address>Surulere, Lagos State</address>
          </div>
        </div>
        <!-- End Info Item -->

        <div class="col-md-4">
          <div class="info-item info-item-borders">
            <i class="bi bi-phone"></i>
            <h3>Phone Number</h3>
            <p><a href="tel:+2348164599350">+2348164599350</a></p>
          </div>
        </div>
        <!-- End Info Item -->

        <div class="col-md-4">
          <div class="info-item">
            <i class="bi bi-envelope"></i>
            <h3>Email</h3>
            <p>
              <a href="mailto:akinsanyaayodeji@gmail.com"
                >akinsanyaayodeji@gmail.com</a
              >
            </p>
          </div>
        </div>
        <!-- End Info Item -->
      </div>

      <div class="form mt-5">
        <form action="/contact" method="post">
          <div class="row">
            <div class="form-group col-md-6 contact">
              <input
                type="text"
                name="name"
                class="form-control"
                id="name"
                placeholder="Your Name"
                required
              />
            </div>
            <div class="form-group col-md-6 contact">
              <input
                type="email"
                class="form-control"
                name="email"
                id="email"
                placeholder="Your Email"
                required
              />
            </div>
          </div>
          <div class="form-group contact">
            <input
              type="text"
              class="form-control"
              name="subject"
              id="subject"
              placeholder="Subject"
              required
            />
          </div>
          <div class="form-group contact">
            <textarea
              class="form-control"
              name="message"
              rows="5"
              placeholder="Message"
              required
            ></textarea>
          </div>

          <div class="text-center">
            <button type="submit" class="btn btn-info">Send Message</button>
          </div>
        </form>
      </div>
      <!-- End Contact Form -->
    </div>
  </section>
</main>
<!-- End #main -->

